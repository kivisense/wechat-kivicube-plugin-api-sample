<!--pages/multi-continue-recognition/multi-tracking/multi-tracking.wxml-->
<view class="layer">
    <kivicube-collection
      class="kivicube"
      collectionId="{{collectionId}}"
      bind:error="error"
      bind:ready="ready"
      bind:sceneReady="sceneReady"
      bind:sceneDestroy="sceneDestroy"
      bind:sceneStart="sceneStart"
      bind:downloadAssetStart="downloadAssetStart"
      bind:downloadAssetProgress="downloadAssetProgress"
      bind:tracked="tracked"
      bind:lostTrack="lostTrack"
      bind:cloudarStart="cloudarStart"
      hideTakePhoto
      hideBackToScan
      hideLoading
      hideDownload
      hideScan
    />

    <cover-view wx:if="{{showTracking && titleScanning}}" class="show-tracking">移近一点，保持扫描</cover-view>
    <cover-view wx:if="{{showTracking}}" class="tip">
      <cover-view class="scan-img-box">
        <cover-image wx:if="{{showScene}}" class="scan-img" src="/assets/images/tyrannosaurus.jpg"></cover-image>
        <cover-image wx:if="{{!showScene}}" class="scan-img" src="/assets/images/shark.jpg"></cover-image>
      </cover-view>
      <cover-view class="scan-font">请对准识别图</cover-view>
    </cover-view>
    <cover-view wx:if="{{showBtn}}" class="btn">
      <cover-view
        class="default-view-add-btn"
        bind:tap="back2Scan"
        wx:if="{{showScanning}}"
      >扫描其它卡片
      </cover-view>
      <cover-view
        class="default-view-add-btn"
        bind:tap="tyrannosaurusClick"
        wx:if="{{!isNotShark}}"
      >切换到霸王龙场景
      </cover-view>
      <cover-view
        wx:if="{{isNotShark}}"
        class="default-view-add-btn"
        bind:tap="sharkClick"
      >切换到鲨鱼场景
      </cover-view>
    </cover-view>
    <!-- 相机边框 -->
    <camera-frame showFrame="{{showTracking}}"></camera-frame>
    <cover-image
      wx:if="{{showScanning}}"
      src="/assets/images/scanning.png"
      class="icon-middle"
      style="top: {{scanProgress}}vh"
    ></cover-image>
  </view>
