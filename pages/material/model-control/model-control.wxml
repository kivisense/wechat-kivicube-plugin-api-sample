<!--pages/material/model-control/model-control.wxml-->
<view class="layer scene-box">
    <kivicube-scene
      class="kivicube"
      scene-id="{{sceneId}}"
      bind:error="error"
      bind:ready="ready"
      bind:downloadAssetStart="downloadAssetStart"
      bind:downloadAssetProgress="downloadAssetProgress"
      bind:downloadAssetEnd="downloadAssetEnd"
      bind:loadSceneStart="loadSceneStart"
      bind:sceneStart="sceneStart"
      bind:loadSceneEnd="loadSceneEnd"
      hideTakePhoto
      hideLoading
      hideDownload
      hideScan
    />
    <view class="bottom-btn-group" wx:if="{{progress === 1}}">
      <!-- 控制模型 -->
      <view class="model-btn-group">
        <view class="default-view-btn" bind:tap="play" data-name="dance" data-flag="false">循环播放</view>
        <view class="default-view-btn" bind:tap="pause">暂停播放</view>
        <view class="default-view-btn" bind:tap="stopAll">停止播放</view>
        <view class="default-view-btn" bind:tap="play" data-name="dance" data-flag="true">重新播放</view>
      </view>
    </view>
    <!-- loading -->
    <loading progress="{{progress}}" showProgressNum="{{false}}"></loading>
    <!-- 拍照按钮 -->
    <image
      wx:if="{{showTakePhoto && photo === ''}}"
      bind:tap="handleTakephoto"
      class="take-photo"
      src="/assets/icons/btn-takephoto.png"
    ></image>
    <!-- 显示照片 -->
    <view class="layer photo-frame" wx:if="{{photo}}">
      <image class="layer" src="{{photo}}"></image>
      <image
        class="btn-close"
        bind:tap="clearPhoto"
        src="/assets/icons/btn-close.png"
      ></image>
      <image
        class="btn-download"
        bind:tap="saveImg"
        src="/assets/icons/btn-download.png"
      ></image>
    </view>
  </view>
