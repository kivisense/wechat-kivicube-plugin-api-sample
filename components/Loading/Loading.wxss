.layer {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.loading {
  z-index: 5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 3.73vw;
  font-weight: 500;
  line-height: 5.33vw;
  color: #ffffff;
  text-shadow: 0px 0px 8px rgba(0, 0, 0, 0.32);
}
.loading-font {
  font-size: 3.73vw;
  font-weight: 500;
  line-height: 5.33vw;
}
.loading-icon {
  position: relative;
  width: 12.8vw;
  height: 12.8vw;
  z-index: 1000;
  animation: rotate 1s linear infinite;
}
/* .loading-rotate {
  animation: rotate 1s linear infinite;
} */
@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(359deg);
  }
}